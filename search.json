---
---
[
  {% for page in site.pages %}
	{% unless forloop.last %}
		{% unless page.url contains ".css" or page.url contains ".json" or page.url contains ".js" %}{
		  "title"    : "{{ page.title | escape }}",
		  "content"	 : "{{ page.content | strip_html | strip_newlines | remove:  "	" | escape | remove: "\"}}",
		  "url"      : "{{ page.url }}"
		},
    {% endunless %}{% endunless %}
    {% if forloop.last %}
		{% if page.url contains ".css" or page.url contains ".json" or page.url contains ".js"%}{
		  "title"    : "",
		  "content"	 : "",
		  "url"      : ""
		}
		{% else %}{
		  "title"    : "{{ page.title | escape }}",
		  "content"	 : "{{ page.content | strip_html | strip_newlines | remove:  "	" | escape | remove: "\"}}",
		  "url"      : "{{ page.url }}"
		}
		{% endif %}		
    {% endif %}
  {% endfor %}
]
